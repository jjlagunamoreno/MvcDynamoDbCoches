@model MvcDynamoDbCoches.Models.Coche

@{
    ViewData["Title"] = "Detalles del Coche";
}

<h1>Detalles del Coche</h1>

<div>
    <h4>@Model.Marca @Model.Modelo</h4>
    <img src="@Model.Imagen" alt="Imagen de @Model.Modelo" width="200" />
    <p><strong>ID:</strong> @Model.IdCoche</p>
    <p><strong>Marca:</strong> @Model.Marca</p>
    <p><strong>Modelo:</strong> @Model.Modelo</p>

    @if (Model.Motor != null)
    {
        <hr />
        <h5 class="text-success">Motor</h5>
        <p><strong>Tipo:</strong> @Model.Motor.Tipo</p>
        <p><strong>Caballos:</strong> @Model.Motor.Caballos</p>
        <p><strong>Potencia:</strong> @Model.Motor.Potencia</p>
    }
    else
    {
        <p class="text-danger"><strong>Este coche no tiene motor asociado.</strong></p>
    }
</div>

<a asp-action="Index" class="btn btn-secondary">Volver</a>
